<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/white_ffffff">

    <LinearLayout
        android:id="@+id/ll_moves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioGroup
            android:id="@+id/rg_moves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_always_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Always advertise" />

            <RadioButton
                android:id="@+id/rb_stop_advertising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop advertising for a static period of time" />

            <RadioButton
                android:id="@+id/rb_always_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Always stop advertising" />

            <RadioButton
                android:id="@+id/rb_start_advertising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start advertising for a static period of time" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="bottom">

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="(1~65535)"
                    android:textColor="@color/grey_b3b3b3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="bottom">

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="(1~65535)"
                    android:textColor="@color/grey_b3b3b3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_trigger_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_moves"
        android:layout_marginTop="10dp"
        android:text="@string/trigger_moved_tips_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_trigger_tips"
        android:layout_marginTop="10dp"
        android:text="@string/trigger_moved_tips_always" />
</RelativeLayout>
